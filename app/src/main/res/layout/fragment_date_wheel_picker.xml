    <!--    with bottn sheet-->
    <TextView
        android:id="@+id/label_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Days"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textColor="@color/teal_700"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_48sdp"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label_months"/>

    <TextView
        android:id="@+id/label_months"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Months"
        android:textColor="@color/teal_700"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/label_days"
        app:layout_constraintEnd_toStartOf="@+id/label_years"
        app:layout_constraintTop_toTopOf="@id/label_days"
        app:layout_constraintBottom_toBottomOf="@+id/label_days"
        app:layout_constraintWidth_percent="0.30" />

    <TextView
        android:id="@+id/label_years"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Years"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textColor="@color/teal_700"
        android:textSize="12sp"
        android:layout_marginRight="@dimen/_48sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_months"
        app:layout_constraintTop_toTopOf="@+id/label_months"
        app:layout_constraintWidth_percent="0.20" />

    <TextView
        android:id="@+id/label_line1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        tools:text="----"
        android:textColor="@color/calendar_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/day_picker"
        app:layout_constraintTop_toBottomOf="@+id/label_days"
        app:layout_constraintWidth_percent="0.15" />

    <NumberPicker
        android:id="@+id/day_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toBottomOf="@+id/label_days"
        app:layout_constraintStart_toEndOf="@+id/label_line1"
        app:layout_constraintEnd_toStartOf="@+id/month_picker"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <NumberPicker
        android:id="@+id/month_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintWidth_percent="0.30"
        app:layout_constraintTop_toTopOf="@+id/day_picker"
        app:layout_constraintStart_toEndOf="@+id/day_picker"
        app:layout_constraintEnd_toStartOf="@+id/year_picker"
        app:layout_constraintBottom_toBottomOf="@+id/day_picker"/>

    <NumberPicker
        android:id="@+id/year_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@+id/month_picker"
        app:layout_constraintBottom_toBottomOf="@+id/month_picker"
        app:layout_constraintStart_toEndOf="@+id/month_picker"
        app:layout_constraintEnd_toStartOf="@+id/label_line2"/>

    <TextView
        android:id="@+id/label_line2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="----"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textColor="@color/calendar_gray"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/year_picker"
        app:layout_constraintTop_toTopOf="@id/year_picker"/>

</androidx.constraintlayout.widget.ConstraintLayout>