<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoElevationBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:elevation">0dp</item>
    </style>


    <style name="DatePickerStyle.Second" parent="Widget.MaterialDatePicker">
        <item name="highlighterColor">@color/O400</item>
        <item name="highlighterHeight">55dp</item>
        <item name="dateFormat">DD_MMMM_YYYY</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
<!--        <item name="colorAccent">@android:color/white</item>-->
        <item name="highlighterColor">@color/O400</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
<!--        <item name="colorControlHighlight">@color/O400</item>-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">13sp</item>

        <item name="android:colorControlActivated">@color/red_700</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/appBlue</item>
        <item name="colorPrimaryDark">@color/appBlue</item>
        <item name="colorAccent">@color/appBlue</item>
<!--        <item name="android:elevation">0dp</item>-->
    </style>

    <style name="NoElevationAppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:elevation">0dp</item>
    </style>


</resources>